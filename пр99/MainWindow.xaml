<Window x:Class="np9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Текстовый редактор" Height="450" Width="600"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="White">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" Click="открытьToolStripMenuItem_Click"/>
                <MenuItem Header="Сохранить как" Click="сохранитьКакToolStripMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="выходToolStripMenuItem_Click"/>
            </MenuItem>
        </Menu>

       
        <TextBox x:Name="textBox1" 
                 Grid.Row="1" 
                 Margin="10,10,10,10"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontSize="14"
                 Background="White"
                 AcceptsReturn="True"
                 AcceptsTab="True"/>
    </Grid>
</Window>